{
  "name": "xuhb-client-boilerplate",
  "version": "1.0.0",
  "title": "客户端模板",
  "description": "基础模板、一键引用、极速方便",
  "private": true,
  "author": "onlyxhb@qq.com",
  "main": "./out/main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview --port 4173",
    "build-only": "vite build",
    "serve:yapi": "cross-env NODE_ENV=local VITE_ROOT=yapi vite --host",
    "serve:test": "cross-env NODE_ENV=local VITE_ROOT=test vite --host",
    "serve:mock": "cross-env NODE_ENV=local VITE_ROOT=mock vite --host",
    "client:start": "electron-vite preview --config client.config.ts",
    "client:dev": "electron-vite dev --config client.config.ts",
    "client:test": "cross-env VITE_ROOT=test electron-vite dev --config client.config.ts",
    "client:mock": "cross-env VITE_ROOT=mock electron-vite dev --config client.config.ts",
    "client:build": "electron-vite build --config client.config.ts",
    "build:win": "electron-builder --win --config builder.yml",
    "build:mac": "electron-builder --mac --config builder.yml",
    "build:linux": "electron-builder --linux --config builder.yml",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "stylelint": "stylelint src/**/*.{less,css,vue} --fix",
    "prettier": "prettier src/**/*.{vue,less,ts} --write",
    "eslint": "eslint src --ext .js,.vue,.ts,.jsx,.tsx --fix"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.52.1",
    "@electron-toolkit/preload": "^1.0.2",
    "@electron-toolkit/utils": "^1.0.2",
    "axios": "^1.1.3",
    "electron-updater": "^4.6.5",
    "file-saver": "^2.0.5",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persist": "^1.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^12.0.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/file-saver": "^2.0.5",
    "@types/node": "^18.8.0",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "cross-env": "^7.0.3",
    "electron": "^20.3.1",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.2.1",
    "electron-vite": "^1.0.11",
    "eslint": "^8.28.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "4.8.4",
    "unplugin-auto-import": "^0.12.0",
    "unplugin-vue-components": "^0.22.11",
    "vite": "^4.4.9",
    "vue-tsc": "^1.0.9"
  }
}
